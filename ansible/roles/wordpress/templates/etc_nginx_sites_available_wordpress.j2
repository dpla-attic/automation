
server {

    listen {{ wordpress_app_port }};
    server_name default;

    root /srv/www/wordpress;
    index index.php;

    # Maximum client request body size, which affects uploads.
    # Also see the same setting as defined upstream in the proxy server's
    # configuration.
    client_max_body_size 500m;

    access_log /var/log/nginx/wordpress-access.log;
    error_log /var/log/nginx/wordpress-error.log;

    location / {
        error_page 404 = @wp;
        rewrite ^/info(.*) /$1 last;
        try_files $uri $uri/ /index.php?$args;
    }

    rewrite /wp-admin$ $scheme://$host$uri/ permanent;

    location ~ \.php$ {
        # Forbid PHP on upload dirs for security
        if ($uri ~ "uploads") {
                return 403;
        }
        rewrite ^/info(.*) /$1 last;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        # NOTE: You should have "cgi.fix_pathinfo = 0;" in php.ini
        include fastcgi_params;
        #fastcgi_index index.php;
        #fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        #fastcgi_param SCRIPT_NAME     $fastcgi_script_name;
        fastcgi_intercept_errors on;
        fastcgi_pass unix:/tmp/wp_php.sock;

    }
    location ~ \.inc$ {
        # Forbid PHP on upload dirs for security
        if ($uri ~ "uploads") {
            return 403;
        }
    }

    # Directives to send expires headers and turn off 404 error logging.
    location ~* \.(ogg|ogv|svg|svgz|eot|otf|woff|mp4|ttf|rss|atom|jpg|jpeg|gif|png|ico|zip|tgz|gz|rar|bz2|doc|xls|exe|ppt|tar|mid|midi|wav|bmp|rtf)$ {
        rewrite ^/info(.*) /$1 last;
        rewrite ^(/[^/]+)?/files/(.+) /wp-content/uploads/$2 last;
        expires max;
        log_not_found off;
    }

    location @wp {

        #strip /info
        rewrite ^/info(.*) /$1 last;

        # Redirect to files
        rewrite ^(/[^/]+)?/files/(.+) /wp-content/uploads/$2 last;

        # Match only one section
        rewrite ^(/[^/]+)?(/wp-.*) $2 last;
        rewrite ^(/[^/]+)?(/.*\.php) $2 last;

        # Send everything else to index.php (permalinks)
        rewrite ^/(.*)$ /index.php?q=$1 last;

    }

}
